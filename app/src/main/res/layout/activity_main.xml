<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--http://www.jcodecraeer.com/a/anzhuokaifa/androidkaifa/2014/1118/2006.html-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/accent_material_light"
        android:layout_height="?attr/actionBarSize">


    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn01_share_data"
                style="@style/style_common_btn"
                android:text="@string/str_01_share" />

            <Button
                android:id="@+id/btn02_send_binary_content"
                style="@style/style_common_btn"
                android:text="btn2" />

            <Button
                android:id="@+id/btn03_scrollbarstyle"
                style="@style/style_common_btn"
                android:text="3scrollbarstyle" />

            <Button
                android:id="@+id/btn04_fragment"
                style="@style/style_common_btn"
                android:text="4-fragment" />


        </LinearLayout>

    </ScrollView>
</RelativeLayout>
