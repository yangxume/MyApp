<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_test_getinstance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_test_getinstance"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@id/btn_test_static_uninner"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_test_static_uninner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_test_static_uninner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_test_getinstance" />

</android.support.constraint.ConstraintLayout>